#include <stdio.h>
#include <stdlib.h>
#include <windows.h>


int main()
{ int a,b,c,d=1000;
    printf("Please set time:\n");
    scanf("%d %d %d",&a,&b,&c);
    if(a>12||b>60||c>60) { printf ("Invalid Input");  }
   else {while(1) { c++;

    if(c>59) {c=0; b++;}
    if(b>59) {b=0; a++;}
    if(a>12) {a=1;}

    printf("%02d:%02d:%02d",a,b,c);
Sleep(d);
    system("cls");


    } }

return 0;




}
